<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <link rel="stylesheet" href="/css/style.css"> <!-- Your custom CSS -->
    <style>
        /* Background and Body Styling */
        body {
            background-image: url("https://wallpapers.com/images/hd/high-quality-pictures-3840-x-2160-lozmuwd5qm9o1yz1.jpg");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        /* Card Styling */
        .form-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
            animation: fadeIn 1s ease-out;
        }

        /* Animation for Form */
        @keyframes fadeIn {
            0% { transform: translateY(50px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        .form-container h2 {
            font-size: 2rem;
            color: #007bff;
            font-weight: bold;
            text-align: center;
        }

        /* Input Field Animation */
        .form-container input {
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .form-container input:focus {
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
            transform: scale(1.02);
        }

        /* Button Hover Effect */
        .form-container .btn-primary {
            transition: background-color 0.3s, transform 0.3s;
        }

        .form-container .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="form-container" data-aos="zoom-in">
            <form action="/login" method="post">
                <h2 class="mb-4">Login</h2>
                
                <!-- Username Field with Animation -->
                <div class="form-group" data-aos="fade-up" data-aos-delay="100">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                </div>

                <!-- Password Field with Animation -->
                <div class="form-group" data-aos="fade-up" data-aos-delay="200">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                </div>

                <!-- Login Button with Animation -->
                <button type="submit" class="btn btn-primary btn-block" data-aos="zoom-in" data-aos-delay="300">Login</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000, // Animation duration
            once: true, // Animation occurs only once as you scroll down
        });
    </script>
</body>
</html>

