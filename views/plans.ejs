<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Plans</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body{
            background-image: url("https://i.pinimg.com/originals/2b/07/51/2b075102bfd37960946eed74b5ffcde5.jpg");
        }
    </style>
</head>
<body>
    <!-- Container for centralizing the content -->
    <div class="container my-5">
        <h1 class="text-center mb-4">Welcome to Your Plans Page!</h1>

        <h2>Your Existing Plans:</h2>
        <ul class="list-group mb-4">
            <% plans.forEach(plan => { %>
                <li class="list-group-item">
                    <h3><%= plan.day %></h3>
                    <ul class="list-unstyled">
                        <li><strong>Activities:</strong> <%= plan.activities %></li>
                        <li><strong>Location:</strong> <%= plan.location %></li>
                        <li><strong>Budget:</strong> <%= plan.budget %> INR</li>
                    </ul>
                </li>
            <% }) %>
        </ul>

        <!-- Plan Your Trip form -->
        <h2>Plan Your Trip</h2>
        <form action="/plan-trip" method="POST">
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input type="date" class="form-control" name="startDate" required><br>
            </div>

            <div class="form-group">
                <label for="endDate">End Date:</label>
                <input type="date" class="form-control" name="endDate" required><br>
            </div>

            <div class="form-group">
                <label for="budget">Budget (INR):</label>
                <input type="number" class="form-control" name="budget" required><br>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Generate Trip Plan</button>
        </form>
    </div>

    <!-- Optional: Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
